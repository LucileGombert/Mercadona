@model Offer

@{
    ViewData["Title"] = "Modification";
    Layout = "_Layout";
}

<div class="container-fluid container-md mb-5">
    <a asp-controller="Offers" asp-action="Index" class="btn btn-outline-secondary"><i class="bi bi-arrow-left-circle"></i> Retour</a>

    <div class="d-flex border-start border-bottom border-success-subtle ps-2 pt-0 mt-5">
        <span class="border-start border-success pt-2 p-0"></span>
        <h1 class="border-bottom border-success p-1">Modification</h1>
    </div>

    <form asp-action="Edit" method="post" class="mt-5 col-md-10 offset-md-1">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id"/>

        <div class="form-group p-2">
            <label asp-for="StartDate" class="control-label"></label>
            <input asp-for="StartDate" type="date" class="form-control">
            <span asp-validation-for="StartDate" class="text-danger"></span>
        </div>

        <div class="form-group p-2">
            <label asp-for="EndDate" class="control-label"></label>
            <input asp-for="EndDate" type="date" class="form-control">
            <span asp-validation-for="EndDate" class="text-danger"></span>
        </div>
        
        <div class="form-group p-2">
            <label asp-for="Percentage" class="control-label"></label>
            @if (Model.Percentage == 0)
            {
                <input asp-for="Percentage" type="text" class="form-control" readonly>
            } else {
                <input asp-for="Percentage" type="text" class="form-control">
            }
            <span asp-validation-for="Percentage" class="text-danger"></span>
        </div>

        <div class="form-group mt-5 d-flex justify-content-evenly">
            <input type="submit" value="Enregistrer" class="btn btn-outline-success">
        </div>
    </form>
</div>