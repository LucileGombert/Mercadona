@{
    string username = User.Identity.Name;
}

<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"] - MercadonaStudi</title>
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/MercadonaStudi.styles.css" asp-append-version="true" />
    </head>

    <body>
        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index" style="max-width:30rem">
                    <img src="~/logo.png" class="img-fluid" style="width:50%" alt="Logo Mercadona"/>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-flex justify-content-around">
                    <li class="nav-item d-flex align-items-center">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index"><i class="bi bi-book pe-2"></i> Catalogue</a>
                    </li>

                    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                    {
                        <li class="nav-item d-flex align-items-center dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false"><i class="bi bi-gear pe-1"></i> Espace administrateur</a>

                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li class="nav-item"><a class="dropdown-item" asp-area="" asp-controller="Categories" asp-action="Index"><i class="bi bi-folder2-open pe-1"></i> Catégories</a></li>
                                <li class="nav-item"><a class="dropdown-item" asp-area="" asp-controller="Offers" asp-action="Index"><i class="bi bi-percent pe-1"></i> Promotions</a></li>
                                <li class="nav-item"><a class="dropdown-item" asp-area="" asp-controller="Products" asp-action="Index"><i class="bi bi-book pe-1"></i> Produits</a></li>
                            </ul>
                        </li>

                        <li class="nav-item d-flex align-items-center"><a class="nav-link text-dark" asp-area="" asp-controller="Users" asp-action="Logout"><i class="bi bi-door-open pe-1"></i> Déconnexion</a></li>
                    }
                    else
                    {
                    <li class="nav-item d-flex align-items-center"><a class="nav-link text-dark" asp-area="" asp-controller="Users" asp-action="Login"><i class="bi bi-person-circle pe-1"></i> Connexion</a></li>
                    }
                </div>
            </nav>
        </header>

        <div class="container-fluid">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
            {
                <p>&copy; 2023 - Mercadona - <a href="~/files/GuideAdmin.pdf" target="_blank">Guide d'utilisation administrateur</a></p>

            }
            else
            {
                <p>&copy; 2023 - Mercadona - <a href="~/files/Guide.pdf" target="_blank">Guide d'utilisation</a></p>
            }
        </div>
    </footer>

        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        @await RenderSectionAsync("Scripts", required: false)
    </body>
</html>
