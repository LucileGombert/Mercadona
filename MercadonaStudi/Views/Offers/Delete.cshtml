@model Offer

@{
    ViewData["Title"] = "Supprimer la promotion";
    Layout = "_Layout";
}

<div class="container-fluid container-md">
    <h1 class="pb-10">Supprimer la promotion</h1>

    <div class ="mt-5 col-md-10 offset-md-1">
        <div class="form-group p-2">
            <label asp-for="StartDate" class="control-label"></label>
            <input asp-for="StartDate" type="text" class="form-control">
            <span asp-validation-for="StartDate" class="text-danger"></span>
        </div>

        <div class="form-group p-2">
            <label asp-for="EndDate" class="control-label"></label>
            <input asp-for="EndDate" type="text" class="form-control">
            <span asp-validation-for="EndDate" class="text-danger"></span>
        </div>

        <div class="form-group p-2">
            <label asp-for="Percentage" class="control-label"></label>
            <input asp-for="Percentage" type="text" class="form-control">
            <span asp-validation-for="Percentage" class="text-danger"></span>
        </div>

        
        <form asp-action="Delete" method="post" >
            <input type="hidden" asp-for="Id"/>

            <div class="form-group mt-5 d-flex justify-content-evenly">
                <a asp-controller="Offers" asp-action="Index" class="btn btn-outline-secondary">Retour</a>
                <input type="submit" value="Supprimer" class="btn btn-outline-success">
            </div>
        </form>
        
    </div>
</div>