@model Category

@{
    ViewData["Title"] = "Modification";
    Layout = "_Layout";
}

<div class="container-fluid container-md">
    <h1 class="pb-10">Modification</h1>

    <form asp-action="Edit" method="post" class="mt-5 col-md-10 offset-md-1">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id"/>

        <div class="form-group p-2">
            <label asp-for="Label" class="control-label"></label>
            <input asp-for="Label" type="text" class="form-control">
            <span asp-validation-for="Label" class="text-danger"></span>
        </div>

        <div class="form-group mt-5 d-flex justify-content-evenly">
            <a asp-controller="Categories" asp-action="Index" class="btn btn-outline-secondary">Retour</a>
            <input type="submit" value="Enregistrer" class="btn btn-outline-success">
        </div>
    </form>
</div>