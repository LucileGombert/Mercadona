<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"] - MercadonaStudi</title>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css"/>
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
        <link rel="stylesheet" href="~/MercadonaStudi.styles.css" asp-append-version="true"/>
    </head>

    <body>
        <header>
            <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom box-shadow mb-3">
                <div class="container-fluid">
                    <a asp-controller="Home" asp-action="Index" class="navbar-brand me-0" style="max-width:13rem">
                        <img src="~/logo.png" class="img-fluid" alt="Logo Mercadona"/>
                    </a>

                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                            <li class="nav-item">
                                <a asp-controller="Home" asp-action="Index" class="nav-link active" aria-current="page"><i class="bi bi-book pe-1"></i> Catalogue</a>
                            </li>

                            @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-dark" role="button" data-bs-toggle="dropdown" aria-expanded="false" href="#"><i class="bi bi-gear pe-1"></i> Espace administrateur</a>

                                    <ul class="dropdown-menu">
                                        <li class="nav-item">
                                            <a asp-controller="Categories" asp-action="Index" class="dropdown-item"><i class="bi bi-folder2-open pe-1"></i> Catégories</a>
                                        </li>
                                        <li class="nav-item">
                                            <a asp-controller="Offers" asp-action="Index" class="dropdown-item"><i class="bi bi-percent pe-1"></i> Promotions</a>
                                        </li>
                                        <li class="nav-item">
                                            <a asp-controller="Products" asp-action="Index" class="dropdown-item"><i class="bi bi-book pe-1"></i> Produits</a>
                                        </li>
                                    </ul>
                                </li>

                                <li class="nav-item">
                                    <a asp-controller="Users" asp-action="Logout" class="nav-link text-dark"><i class="bi bi-door-open pe-1"></i> Déconnexion</a>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                    <a asp-controller="Users" asp-action="Login" class="nav-link text-dark"><i class="bi bi-person-circle pe-1"></i> Connexion</a>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </nav>
        </header>

        <div class="container-fluid">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>

        <footer class="border-top footer text-muted">
            <div class="container">
                @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                {
                <p>&copy; 2023 - Mercadona - <a href="~/files/GUIDE UTILISATEUR ADMIN.pdf" target="_blank"><i class="bi bi-journal-bookmark"></i> Guide d'utilisation</a> - <a href="~/files/Doc technique.pdf" target="_blank"><i class="bi bi-journal-text"></i> Documentation technique</a></p>

                }
                else
                {
                <p>&copy; 2023 - Mercadona - <a href="~/files/GUIDE UTILISATEUR.pdf" target="_blank"><i class="bi bi-journal-bookmark"></i> Guide d'utilisation</a></p>
                }
            </div>
        </footer>

        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        @await RenderSectionAsync("Scripts", required: false)
    </body>
</html>
