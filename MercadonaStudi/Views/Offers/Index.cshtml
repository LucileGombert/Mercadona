@model IEnumerable<Offer>

@{
    ViewData["Title"] = "Promotions";
    Layout = "_Layout";
}

<div class="container-fluid container-md">
    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary"><i class="bi bi-arrow-left-circle"></i> Retour</a>

    <div class="mt-5 mb-5 d-flex justify-content-evenly flex-wrap align-items-center">
        <div class="d-flex border-start border-bottom border-success-subtle ps-2 pt-0">
            <span class="border-start border-success pt-2 p-0"></span>
            <h1 class="border-bottom border-success p-1">Promotions</h1>
        </div>

        <div>
            <a asp-controller="Offers" asp-action="Create" class="btn btn-outline-success"><i class="bi bi-plus-circle"></i> Ajouter une promotion</a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-10 offset-md-1">
            <table class="table">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.StartDate)</th>
                        <th>@Html.DisplayNameFor(model => model.EndDate)</th>
                        <th>@Html.DisplayNameFor(model => model.Percentage)</th>
                        <th></th>
                    </tr>
                </thead>
       
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="align-middle">@item.StartDate</td>
                            <td class="align-middle">@item.EndDate</td>
                            <td class="align-middle">@item.Percentage %</td>
                            
                            <td class="d-flex justify-content-end">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning m-2"><i class="bi bi-pencil-square"></i> Modifier</a>
                                
                                @if (item.Percentage == 0)
                                {
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-secondary m-2 disabled"><i class="bi bi-trash"></i> Supprimer</a>
                                } else {
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger m-2"><i class="bi bi-trash"></i> Supprimer</a>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
