@model Offer

@{
    ViewData["Title"] = "Modifier la promotion";
    Layout = "_Layout";
}

<div class="container-fluid container-md">
    <h1 class="pb-10">Modifier la promotion</h1>

    <form asp-action="Edit" method="post" class="mt-5 col-md-10 offset-md-1">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group p-2">
            <label asp-for="StartDate" class="control-label"></label>
            <input asp-for="StartDate" type="date" class="form-control">
            <span asp-validation-for="StartDate" class="text-danger"></span>
        </div>

        <div class="form-group p-2">
            <label asp-for="EndDate" class="control-label"></label>
            <input asp-for="EndDate" type="date" class="form-control">
            <span asp-validation-for="EndDate" class="text-danger"></span>
        </div>

        <div class="form-group p-2">
            <label asp-for="Percentage" class="control-label"></label>
            <input asp-for="Percentage" type="text" class="form-control">
            <span asp-validation-for="Percentage" class="text-danger"></span>
        </div>

        <div class="form-group mt-5 d-flex justify-content-evenly">
            <a asp-controller="Offers" asp-action="Index" class="btn btn-outline-secondary">Retour</a>
            <button type="submit" class="btn btn-outline-success">Enregistrer</button>
        </div>
    </form>
</div>